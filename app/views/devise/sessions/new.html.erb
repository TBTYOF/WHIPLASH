<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <h3 class="text-margin-bottom border-bottom font_2">Log in</h3>
      <div class="col-md-3"></div>
      <div class="col-md-9">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="row blog-margin field">
            <%= f.label :name, class: "font_4" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "font_4" %>
          </div>

          <div class="row blog-margin field">
            <%= f.label :email, class: "font_4" %><br />
            <%= f.email_field :email, autocomplete: "email", class: "font_4" %>
          </div>

          <div class="row blog-margin field">
            <%= f.label :password, class: "font_4" %><br />
             <%= f.password_field :password, autocomplete: "current-password", class: "font_4" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-info form_4" %>
          </div>
        <% end %>
          </div>
      </div>
      <div class="col-md-2"></div>
    </div>
  </div>
